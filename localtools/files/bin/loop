#!/bin/sh
# $Id: loop,v 1.1 2005/06/21 20:21:40 abs Exp $

# Useful inside screen and suchlist - just repeat command indefinitely

while true ; do
    $*
    if [ $? = 130 ] ; then	# Restart after 5 seconds for a HUP
	echo sleeping...
	sleep 5
    else
	reset -I -k^U -i^C -e^H -Q
	echo "Press RETURN ($*)"
	read line
    fi
done
